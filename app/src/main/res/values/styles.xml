<resources>

    <style name="EzGas" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Material colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/deep_purple_400</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/light</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark</item>

        <!-- Status bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

</resources>