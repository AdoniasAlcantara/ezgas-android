<resources>

    <style name="EzGas" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Material colors -->
        <item name="colorPrimary">@color/deep_purple_400</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/light</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark</item>

        <!-- Status bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.EzGas.Title</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.EzGas.Subtitle</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.EzGas.CardTitle</item>
        <item name="textAppearanceBody1">@style/TextAppearance.EzGas.Body</item>
        <item name="textAppearanceCaption">@style/TextAppearance.EzGas.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.EzGas.Button</item>

        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.EzGas.SmallRadius</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.EzGas.MediumRadius</item>

        <!--Widgets -->
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>
        <item name="tabStyle">@style/Widget.EzGas.TabLayout</item>
        <item name="materialCardViewStyle">@style/Widget.EzGas.Card</item>
        <item name="materialButtonStyle">@style/Widget.EzGas.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.EzGas.OutlinedButton</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.EzGas.Fab</item>
        <item name="sliderStyle">@style/Widget.EzGas.Slider</item>
        <item name="snackbarStyle">@style/Widget.EzGas.Snackbar</item>
    </style>

    <style name="TextAppearance.EzGas.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="TextAppearance.EzGas.Subtitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextAppearance.EzGas.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextAppearance.EzGas.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextAppearance.EzGas.CardTitle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextAppearance.EzGas.Button" parent="TextAppearance.EzGas.Subtitle" />

    <style name="TextAppearance.EzGas.OutlinedButton" parent="TextAppearance.EzGas.Subtitle">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextAppearance.EzGas.Currency" parent="">
        <item name="fontFamily">@font/titillium_web</item>
        <item name="android:textSize">@dimen/card_price</item>
    </style>

    <style name="ShapeAppearance.EzGas.SmallRadius" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/radius_small</item>
    </style>

    <style name="ShapeAppearance.EzGas.MediumRadius" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/radius_medium</item>
    </style>

    <style name="Widget.EzGas.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/deep_purple_400</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/color_tabs</item>
        <item name="tabTextAppearance">@style/TextAppearance.EzGas.Subtitle</item>
    </style>

    <style name="Widget.EzGas.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="Widget.EzGas.Card.Outlined">
        <item name="strokeWidth">@dimen/card_stroke</item>
        <item name="strokeColor">@color/grey</item>
    </style>

    <style name="Widget.EzGas.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.EzGas.SecondaryColorAsPrimary</item>
    </style>

    <style name="Widget.EzGas.MiniButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minWidth">@dimen/button_mini_width</item>
        <item name="android:minHeight">@dimen/button_mini_height</item>
        <item name="android:paddingHorizontal">@dimen/button_mini_spacing</item>
        <item name="android:insetTop">@dimen/button_mini_insets</item>
        <item name="android:insetBottom">@dimen/button_mini_insets</item>
        <item name="iconPadding">4dp</item>
    </style>

    <style name="Widget.EzGas.MiniButton.IconOnly">
        <item name="iconPadding">0dp</item>
    </style>

    <style name="Widget.EzGas.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minWidth">@dimen/outlined_button_size</item>
        <item name="android:minHeight">@dimen/outlined_button_size</item>
        <item name="android:insetTop">@dimen/outlined_button_insets</item>
        <item name="android:insetBottom">@dimen/outlined_button_insets</item>
        <item name="backgroundTint">@color/color_outlined_button</item>
        <item name="strokeWidth">@dimen/outlined_button_stroke</item>
        <item name="strokeColor">@color/grey</item>
        <item name="rippleColor">@null</item>
        <item name="shapeAppearance">@style/ShapeAppearance.EzGas.MediumRadius</item>
    </style>

    <style name="Widget.EzGas.Fab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:minHeight">@dimen/fab_size</item>
    </style>

    <style name="Widget.EzGas.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="trackHeight">@dimen/slider_track_height</item>
        <item name="trackColorActive">@color/deep_purple_400</item>
        <item name="trackColorInactive">@color/grey</item>
        <item name="tickColor">@android:color/transparent</item>
        <item name="thumbRadius">@dimen/slider_thumb_radius</item>
        <item name="thumbColor">@android:color/white</item>
        <item name="thumbElevation">@dimen/slider_thumb_elevation</item>
        <item name="haloRadius">@dimen/slider_halo_radius</item>
    </style>

    <style name="Widget.EzGas.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/black</item>
        <item name="animationMode">slide</item>
    </style>

    <style name="ThemeOverlay.EzGas.SecondaryColorAsPrimary" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/deep_purple_400</item>
    </style>

    <style name="FadingEdge">
        <item name="android:ellipsize">none</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">@dimen/text_fading_edge</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>