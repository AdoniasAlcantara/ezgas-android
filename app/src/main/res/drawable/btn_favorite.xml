<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/bg_checkbox" />
            <item android:drawable="@drawable/ic_favorite_on" android:gravity="center" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:drawable="@drawable/bg_checkbox" />
            <item android:drawable="@drawable/ic_favorite_off" android:gravity="center" />
        </layer-list>
    </item>

</selector>